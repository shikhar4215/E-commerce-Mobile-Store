extends layout

block content
  div.pb-5
    #carouselExampleIndicators.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        li.active(data-target='#carouselExampleIndicators' data-slide-to='0')
        li(data-target='#carouselExampleIndicators' data-slide-to='1')
        li(data-target='#carouselExampleIndicators' data-slide-to='2')
      .carousel-inner
        .carousel-item.active
          center 
            img.d-block.w-25(src="images/1.png" alt='First slide')
            div.carousel-caption.d-none.d-md-block
            h3.text-uppercase Future is here
        .carousel-item
          center
            img.d-block.w-25(src='images/2.png' alt='Second slide')
            h3.text-uppercase Enlighten yourself
        .carousel-item
          center 
            img.d-block.w-25(src='images/3.png' alt='Third slide')
            h3.text-uppercase Quality at the best price
    
    
    script.  
      $('.carousel').carousel({
        interval: 3000
      })
